{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2020"
        ]
    },
    "include": [
        "src/**/*",
        "knexfile.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}